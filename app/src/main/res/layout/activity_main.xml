<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="@color/white"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white90"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_b2c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B2C API" />

            <Button
                android:id="@+id/btn_b2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B2B API" />

            <Button
                android:id="@+id/btn_c2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C2B API" />

            <Button
                android:id="@+id/btn_acc_bal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Balance API" />

            <Button
                android:id="@+id/btn_reversal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reversal" />

            <Button
                android:id="@+id/btn_trans_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Status" />

            <Button
                android:id="@+id/btn_lipa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lipa Na Mpesa Online" />

            <Button
                android:id="@+id/btn_lipa_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lipa Na Mpesa Online Query" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>